<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag    'application', media: 'all',
                             'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= render 'layouts/shim' %>
  </head>

	<body class="<%= controller_name %>-<%= action_name %>">
	<%= render 'layouts/header' unless action_name == 'new' && (controller_name == 'users' ||controller_name == 'sessions') %>
    <%= yield %>
    <%= render 'layouts/footer' unless action_name == 'new' && (controller_name == 'users'||controller_name == 'sessions') %>

	<%= debug(params) if Rails.env.development? %>
  </body>
</html>
